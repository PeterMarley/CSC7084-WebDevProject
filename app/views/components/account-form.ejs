      <button form="delete-account-form" type="button" id="delete-account-button" class="button-style-1">Delete your account</button>
    </div>
    <% 
    if (messages) {
      for (const message of messages) { 
    %>
    <div><%- message %></div>
    <% 
      }
    }
    %>
  </div>
</form>

<form id="account-form-change-password" class="form-style-1 account-form hidden" action="/account/password" method="POST">
  <div class="form-style-1-container">
    <div class="grid-container col" id="change-password-inputs">
      <label>Change password</label>
      <input type="password" name="password-old" placeholder="Enter old password..." autocomplete="off" id="oldpassword">
      <input type="password" name="password-new" placeholder="Enter new password..." autocomplete="off" id="newpassword">
      <input type="password" name="password-new-confirm" placeholder="Confirm new password..." autocomplete="off" id="newpasswordconfirm">
    </div>
    <div class="flex-container centered-h">
      <button value="Change Password" id="change-password-submit" class="button-style-1" disabled>Change Password</button>
    </div>
  </div>
</form>
