	<form id="account-form" class="form-style-1 account-form" action="/user/account" method="POST">
  <div class="form-style-1-container grid-container gap-5">
    <div class="grid-container">
      <label for="username">Username</label>
      <input type="text" name="username" value="<%- username %>">
    </div>
    <div class="grid-container">
      <label for="email">Email</label>
      <input type="email" name="email" value="<%- email %>">
    </div>
    <div class="grid-container gap-5">
      <button type="submit" id="save-account-details-change" class="button-style-1">Save Username and Email</button>
      <button type="button" id="show-change-password" class="button-style-1">Change your password</button>
    <!-- TODO finish this delete account part, and add confirmation to save details change above -->
